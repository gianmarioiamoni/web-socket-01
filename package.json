{
  "name": "real-time-task-board",
  "version": "1.0.0",
  "description": "Real-time collaborative task board with WebSockets",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm run dev",
    "server:install": "cd server && npm install",
    "client:install": "cd client && npm install",
    "install:all": "npm run server:install && npm run client:install",
    "build": "npm run client:build && npm run server:build",
    "server:build": "cd server && npm run build",
    "client:build": "cd client && npm run build",
    "test": "npm run server:test && npm run client:test",
    "server:test": "cd server && npm test",
    "client:test": "cd client && npm test"
  },
  "keywords": [
    "websocket",
    "real-time",
    "collaboration",
    "task-board",
    "MERN"
  ],
  "author": "Developer",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
